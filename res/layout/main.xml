<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent" android:weightSum="1"
              android:clickable="false" android:background="@drawable/bg">

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Medium Text"
            android:id="@+id/textView" android:layout_gravity="right"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Points: 5"
            android:id="@+id/textView2" android:layout_gravity="right"/>
    <Space
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.24"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Welcome to Drink Or Drive"
            android:id="@+id/textView3" android:layout_gravity="center_horizontal"/>
    <Space
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.33"/>
    <ImageButton
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:id="@+id/imageButton" android:layout_gravity="center_horizontal"
            android:src="@drawable/createbutton"
            android:longClickable="true" android:keepScreenOn="true" android:cropToPadding="true"
            android:scaleType="fitXY" android:layout_weight="0.05"/>
    <Space
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.09"/>
    <ImageButton
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:id="@+id/imageButton2"
            android:src="@drawable/joinbutton" android:scaleType="fitXY" android:layout_gravity="center_horizontal"
            android:layout_weight="0.05"/>
    <Space
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.13"/>

</LinearLayout>